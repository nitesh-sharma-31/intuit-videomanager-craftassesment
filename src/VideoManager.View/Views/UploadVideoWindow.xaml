<Window x:Class="VideoManager.View.Views.UploadVideoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Upload Video" Height="450" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Upload New Video" FontSize="24" FontWeight="Bold" 
                   Foreground="#212121" Margin="0,0,0,20"/>

        <!-- Form -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="File Path:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="FilePathTextBox" IsReadOnly="True" Padding="10,8" 
                             FontSize="14" Margin="0,0,0,15" Background="#F5F5F5"/>

                    <TextBlock Text="Title:*" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="TitleTextBox" Padding="10,8" FontSize="14" Margin="0,0,0,15"/>

                    <TextBlock Text="Description:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="DescriptionTextBox" Padding="10,8" FontSize="14" 
                             Height="100" TextWrapping="Wrap" AcceptsReturn="True" 
                             VerticalScrollBarVisibility="Auto" Margin="0,0,0,15"/>

                    <TextBlock Text="Tags (comma separated):" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="TagsTextBox" Padding="10,8" FontSize="14" Margin="0,0,0,15"/>

                    <ProgressBar x:Name="UploadProgressBar" Height="30" Minimum="0" Maximum="100" 
                                 Visibility="Collapsed" Margin="0,10,0,0"/>
                    <TextBlock x:Name="StatusTextBlock" Foreground="#757575" 
                               TextAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Upload" Style="{StaticResource ModernButton}" 
                    Background="#4CAF50" Click="UploadButton_Click" Padding="30,10"/>
            <Button Content="Cancel" Style="{StaticResource ModernButton}" 
                    Background="#F44336" Click="CancelButton_Click" Padding="30,10"/>
        </StackPanel>
    </Grid>
</Window>
