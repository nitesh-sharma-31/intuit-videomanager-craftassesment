<Window x:Class="VideoManager.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoManager.View"
        mc:Ignorable="d"
        Title="Video Manager" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Foreground" Value="#666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Card Style for Video Items -->
        <Style x:Key="VideoCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataTemplate for Video Items -->
        <DataTemplate x:Key="VideoItemTemplate">
            <Border Style="{StaticResource VideoCard}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Video Icon/Thumbnail -->
                    <Border Grid.Column="0" Width="80" Height="60" Background="#E3F2FD" 
                            CornerRadius="4" Margin="0,0,15,0">
                        <TextBlock Text="??" FontSize="32" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <!-- Video Info -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="Bold" 
                                   Foreground="#212121" TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{Binding Description}" FontSize="12" Foreground="#757575" 
                                   TextTrimming="CharacterEllipsis" Margin="0,5,0,0"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="Size: " FontSize="11" Foreground="#9E9E9E"/>
                            <TextBlock FontSize="11" Foreground="#9E9E9E">
                                <TextBlock.Text>
                                    <Binding Path="FileSizeBytes" StringFormat="{}{0:N0} bytes"/>
                                </TextBlock.Text>
                            </TextBlock>
                            <TextBlock Text=" | Duration: " FontSize="11" Foreground="#9E9E9E" Margin="10,0,0,0"/>
                            <TextBlock FontSize="11" Foreground="#9E9E9E">
                                <TextBlock.Text>
                                    <Binding Path="DurationSeconds" StringFormat="{}{0} sec"/>
                                </TextBlock.Text>
                            </TextBlock>
                            <TextBlock Text=" | Version: " FontSize="11" Foreground="#9E9E9E" Margin="10,0,0,0"/>
                            <TextBlock Text="{Binding CurrentVersion}" FontSize="11" Foreground="#9E9E9E"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="{Binding FileFormat}" FontSize="12" Foreground="White"
                                   Background="#4CAF50" Padding="8,4" Margin="5,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1976D2" Padding="20,15">
            <Grid>
                <TextBlock Text="?? Video Manager" FontSize="24" FontWeight="Bold" 
                           Foreground="White" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding Videos.Count, StringFormat='Total Videos: {0}'}" 
                               FontSize="14" Foreground="White" VerticalAlignment="Center" Margin="0,0,20,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Search and Actions Bar -->
        <Border Grid.Row="1" Background="White" Padding="15" 
                BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <Border Grid.Column="0" BorderBrush="#BDBDBD" BorderThickness="1" 
                        CornerRadius="4" Padding="10,8" Background="White">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                 BorderThickness="0" FontSize="14" VerticalAlignment="Center"
                                 Background="Transparent"/>
                        <Button Grid.Column="1" Content="?? Search" Style="{StaticResource ModernButton}"
                                Command="{Binding SearchCommand}" Padding="10,5" Margin="5,0,0,0"/>
                    </Grid>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0,0,0">
                    <Button Content="? Upload Video" Style="{StaticResource ModernButton}"
                            Command="{Binding UploadVideoCommand}" Background="#4CAF50"/>
                    <Button Content="?? Refresh" Style="{StaticResource ModernButton}"
                            Command="{Binding RefreshCommand}" Background="#FF9800"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Video List -->
        <Grid Grid.Row="2" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Videos List -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="10">
                <Grid>
                    <ListBox ItemsSource="{Binding Videos}"
                             SelectedItem="{Binding SelectedVideo}"
                             ItemTemplate="{StaticResource VideoItemTemplate}"
                             BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>

                    <!-- Loading Indicator -->
                    <Border Background="#80FFFFFF" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="? Loading..." FontSize="18" Foreground="#1976D2"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#E0E0E0"/>

            <!-- Details Panel -->
            <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="15">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Video Details" FontSize="18" FontWeight="Bold" 
                                   Foreground="#212121" Margin="0,0,0,15"/>

                        <StackPanel Visibility="{Binding SelectedVideo, Converter={StaticResource NullToVisibilityConverter}}">
                            <TextBlock Text="Title:" FontWeight="Bold" Margin="0,5,0,2"/>
                            <TextBlock Text="{Binding SelectedVideo.Title}" TextWrapping="Wrap" Margin="0,0,0,10"/>

                            <TextBlock Text="Description:" FontWeight="Bold" Margin="0,5,0,2"/>
                            <TextBlock Text="{Binding SelectedVideo.Description}" TextWrapping="Wrap" Margin="0,0,0,10"/>

                            <TextBlock Text="File Name:" FontWeight="Bold" Margin="0,5,0,2"/>
                            <TextBlock Text="{Binding SelectedVideo.OriginalFileName}" TextWrapping="Wrap" Margin="0,0,0,10"/>

                            <TextBlock Text="Format:" FontWeight="Bold" Margin="0,5,0,2"/>
                            <TextBlock Text="{Binding SelectedVideo.FileFormat}" Margin="0,0,0,10"/>

                            <TextBlock Text="Created:" FontWeight="Bold" Margin="0,5,0,2"/>
                            <TextBlock Text="{Binding SelectedVideo.CreatedDate, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" 
                                       Margin="0,0,0,10"/>

                            <TextBlock Text="Created By:" FontWeight="Bold" Margin="0,5,0,2"/>
                            <TextBlock Text="{Binding SelectedVideo.CreatedBy}" Margin="0,0,0,10"/>

                            <TextBlock Text="Versions:" FontWeight="Bold" Margin="0,5,0,2"/>
                            <TextBlock Text="{Binding SelectedVideo.VersionCount}" Margin="0,0,0,15"/>

                            <Separator Margin="0,10"/>

                            <!-- Action Buttons -->
                            <Button Content="?? View Details" Style="{StaticResource ModernButton}"
                                    Command="{Binding ViewVideoCommand}" HorizontalAlignment="Stretch"
                                    Margin="0,5"/>
                            <Button Content="?? Edit" Style="{StaticResource ModernButton}"
                                    Command="{Binding EditVideoCommand}" HorizontalAlignment="Stretch"
                                    Background="#FF9800" Margin="0,5"/>
                            <Button Content="?? Download" Style="{StaticResource ModernButton}"
                                    Command="{Binding DownloadVideoCommand}" HorizontalAlignment="Stretch"
                                    Background="#4CAF50" Margin="0,5"/>
                            <Button Content="??? Delete" Style="{StaticResource ModernButton}"
                                    Command="{Binding DeleteVideoCommand}" HorizontalAlignment="Stretch"
                                    Background="#F44336" Margin="0,5"/>
                        </StackPanel>

                        <TextBlock Text="Select a video to view details" 
                                   Visibility="{Binding SelectedVideo, Converter={StaticResource InverseNullToVisibilityConverter}}"
                                   Foreground="#9E9E9E" HorizontalAlignment="Center" Margin="0,50,0,0"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Pagination -->
        <Border Grid.Row="3" Background="White" Padding="15" 
                BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="?? Previous" Style="{StaticResource ModernButton}"
                            Command="{Binding PreviousPageCommand}"/>
                    <TextBlock Text="{Binding CurrentPage, StringFormat='Page {0}'}" 
                               FontSize="14" VerticalAlignment="Center" Margin="20,0"/>
                    <TextBlock Text="of" FontSize="14" VerticalAlignment="Center" Margin="5,0"/>
                    <TextBlock Text="{Binding TotalPages}" FontSize="14" VerticalAlignment="Center" Margin="5,0,20,0"/>
                    <Button Content="Next ??" Style="{StaticResource ModernButton}"
                            Command="{Binding NextPageCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="4" Background="#263238" Padding="15,8">
            <TextBlock Text="{Binding StatusMessage}" Foreground="White" FontSize="12"/>
        </Border>
    </Grid>
</Window>
